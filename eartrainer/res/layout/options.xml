<!--         android:entries="@array/game_modes" -->
<!--         android:prompt="@string/game_mode_prompt" /> -->
    
    <RadioGroup
        android:id="@+id/game_mode_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/freeplay_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/freeplay_selection"
        android:button="@null"
        android:checked="true"
        android:gravity="center" />

    <RadioButton
        android:id="@+id/practice_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/practice_selection"
        android:button="@null"
        android:gravity="center" />

    <RadioButton
        android:id="@+id/challenge_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/challenge_selection"
        android:button="@null"
        android:gravity="center" />
    
    </RadioGroup>
    
    <TextView
        android:id="@+id/instrumentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/instrument_prompt"
        android:text="@string/instrument_prompt"
        android:textSize="15sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <RadioGroup
    android:id="@+id/instrument_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/piano_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/piano_selection"
        android:button="@null"
        android:checked="true"
        android:gravity="center" />

    <RadioButton
        android:id="@+id/guitar_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/guitar_selection"
        android:button="@null"
        android:gravity="center" />
    
    </RadioGroup>
    
    <TextView
        android:id="@+id/hi_lo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/hi_low_textBox"
        android:text="@string/hi_low_textBox"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />
    
    <RadioGroup
    android:id="@+id/hi_lo_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/hi_lo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/piano_selection"
        android:button="@null"
        android:checked="true"
        android:gravity="center" />

    <RadioButton
        android:id="@+id/lo_hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@drawable/guitar_selection"
        android:button="@null"
        android:gravity="center" />
    
    </RadioGroup>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/black_wood"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        android:text="@string/options_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="48sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/gameModePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/game_mode_prompt"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/gameModeSpinner"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:entries="@array/game_modes"
        android:prompt="@string/game_mode_prompt" />

    <TextView
        android:id="@+id/instrumentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/instrument_prompt"
        android:text="@string/instrument_prompt"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/instrumentSpinner"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:entries="@array/instruments"
        android:prompt="@string/instrument_prompt" />

    <TextView
        android:id="@+id/scaleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:contentDescription="@string/scale_prompt"
        android:text="@string/scale_prompt"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/scaleSpinner"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:entries="@array/scales"
        android:prompt="@string/scale_prompt"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/difficultyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/difficulty_prompt"
        android:text="@string/difficulty_prompt"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/difficultySpinner"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:entries="@array/difficulty_levels"
        android:prompt="@string/difficulty_prompt"
        android:visibility="invisible" />

    <Button
        android:background="@drawable/red_button"
        android:textColor="@color/white"
        android:id="@+id/startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="@string/startGame" />

</LinearLayout>
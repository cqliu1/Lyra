<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/black_wood"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/leaderboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/leaderboard_title"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_gravity="center_horizontal">

     <Button
            android:id="@+id/leaderboardPreviousPage"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight=".25"
            android:background="@drawable/red_button"
            android:padding="30dp"
            android:gravity="center"
            android:text="@string/leaderboard_prev"
            android:textSize="20sp"
            android:textColor="@color/white" />
    
    <TableLayout
        android:id="@+id/leaderboardTable"
        android:layout_width="350dp"
        android:layout_height="wrap_content" 
        android:layout_gravity="center_horizontal">

        <TableRow
            android:id="@+id/leaderboardTableHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
        	    <TextView
        	        android:id="@+id/leaderboardTableHeaderCol1"
        	        android:layout_width="50dp"
        	        android:layout_height="match_parent"
        	        android:gravity="center"
        	        android:text="@string/leaderboard_col1"
        	        android:textColor="@color/white"
        	        android:textSize="14sp" />
			    
			    <TextView
			        android:id="@+id/leaderboardTableHeaderCol2"
			        android:layout_height="match_parent"
			        android:layout_width="200dp"
			        android:textColor="@color/white"
			        android:textSize="14sp"
			        android:text="@string/leaderboard_col2" />
			    
			    <TextView
			        android:id="@+id/leaderboardTableHeaderCol3"
			        android:layout_width="100dp"
			        android:layout_height="match_parent"
			        android:textColor="@color/white"
			        android:textSize="14sp"
			        android:text="@string/leaderboard_col3" />
        </TableRow>

    </TableLayout>
    
    <Button
            android:id="@+id/leaderboardNextPage"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight=".25"
            android:padding="30dp"
            android:background="@drawable/red_button"
            android:gravity="center"
            android:text="@string/leaderboard_next"
            android:textSize="20sp"
            android:textColor="@color/white" />
        
    </LinearLayout>
    
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:id="@+id/leaderboardPageText"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="Page 1" />

</LinearLayout>

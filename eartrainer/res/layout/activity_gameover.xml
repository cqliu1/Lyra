<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="1"
    android:columnOrderPreserved="false"
    android:background="@drawable/black_wood"
    android:orientation="horizontal"
    android:useDefaultMargins="true" xmlns:tools="http://schemas.android.com/tools" tools:context=".GameOverActivity">
      
    <TextView
        android:id="@+id/game_over_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/game_over"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="48sp"
        android:textStyle="bold" />
    
    <Button
        android:background="@drawable/red_button"
        android:layout_width= "200dp" 
        android:textColor="@color/white"
        android:id="@+id/btnToReplay"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_row="3"
        android:textSize="20sp"
        android:text="@string/game_over_restart" />
    
     <Button
        android:background="@drawable/red_button"
        android:layout_width= "200dp" 
        android:textColor="@color/white"
        android:id="@+id/btnToMainMenu"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="5"
        android:textSize="20sp"
        android:text="@string/game_over_main_menu" />
     
    <Button
        android:background="@drawable/red_button"
        android:layout_width= "200dp" 
        android:textColor="@color/white"
        android:id="@+id/btnToLeaderboardsGameOver"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="7"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:text="@string/main_menu_leaderboards" />

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="8"
        android:gravity="center"
        android:text="@string/scoreText"
        android:textSize="20sp" />

    <TextView
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="8"
        android:gravity="center"
        android:text="@string/game_over_description"
        android:textSize="20sp" />

</GridLayout>
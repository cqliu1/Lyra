<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="1"
    android:columnOrderPreserved="false"
    android:background="@drawable/black_wood"
    android:orientation="horizontal"
    android:useDefaultMargins="true" xmlns:tools="http://schemas.android.com/tools" tools:context=".GameOverActivity">
      
    <Button
        android:background="@drawable/red_button"
        android:layout_width= "200dp" 
        android:textColor="@color/white"
        android:id="@+id/btnToReplay"
        android:layout_gravity="center"
        android:layout_column="0"
        android:gravity="center"
        android:layout_row="3"
        android:textSize="20sp"
        android:text="@string/game_over_restart" />
    
        <TextView android:text=""
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="4"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    
     <Button
        android:background="@drawable/red_button"
        android:layout_width= "200dp" 
        android:textColor="@color/white"
        android:id="@+id/btnToMainMenu"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="5"
        android:textSize="20sp"
        android:text="@string/game_over_main_menu" />
     
    <TextView android:text=""
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="6"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
     
    <Button
        android:background="@drawable/red_button"
        android:layout_width= "200dp" 
        android:textColor="@color/white"
        android:id="@+id/btnToLeaderboardsGameOver"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="7"
        android:textSize="20sp"
        android:text="@string/main_menu_leaderboards" />

    <TextView
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="8"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:paddingBottom="50dp"
        android:text="@string/game_over_description" />

    <TextView
        android:id="@+id/textView1"
        android:layout_height="90dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="1"
        android:paddingTop="10dp"
        android:text="@string/game_over"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="48sp"
        android:textStyle="bold" />

</GridLayout>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="1"
    android:columnOrderPreserved="false"
    android:orientation="horizontal"
    android:useDefaultMargins="true" >

      <TextView
        android:id="@+id/textView1"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="@string/game_over"
        android:textAppearance="?android:attr/textAppearanceLarge" />
      
    <Button
        android:id="@+id/btnToReplay"
        android:layout_gravity="center"
        android:layout_column="0"
        android:gravity="center"
        android:layout_row="1"
        android:text="@string/restart" />
    
     <Button
        android:id="@+id/btnToMainMenu"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="2"
        android:text="@string/game_over_main_menu" />
     
    <Button
        android:id="@+id/btnToLeaderboardsGameOver"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="@string/main_menu_leaderboards" />

    <TextView
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="4"
        android:gravity="top"
        android:text="@string/game_over_description" />


</GridLayout>
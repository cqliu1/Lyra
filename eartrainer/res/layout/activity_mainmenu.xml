<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="1"
    android:columnOrderPreserved="false"
    android:orientation="horizontal"
    android:useDefaultMargins="true" >


    <Button
        android:id="@+id/btnToGame"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_row="1"
        android:text="@string/main_menu_game" />
    
     <Button
        android:id="@+id/btnToSettings"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="2"
        android:text="@string/main_menu_settings" />
     
    <Button
        android:id="@+id/btnToLeaderboards"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="@string/main_menu_leaderboards" />

    <TextView
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="4"
        android:gravity="top"
        android:text="@string/main_menu_description" />

    <TextView
        android:id="@+id/textView1"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="@string/title_ear_trainer"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</GridLayout>
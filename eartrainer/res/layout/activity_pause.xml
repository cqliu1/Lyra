<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_wood"
    android:columnCount="1"
    android:columnOrderPreserved="false"
    android:orientation="horizontal"
    android:useDefaultMargins="true"
    tools:context=".PauseActivity" >

    <TextView
        android:id="@+id/pause_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="0"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/pause_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="48sp"
        android:textStyle="bold" />
    
    
    <TextView
        android:id="@+id/volume_label"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="1"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:text="@string/volume"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btnResumeGame"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/red_button"
        android:textAlignment="center"
        android:text="@string/resume"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnQuitGame"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/red_button"
        android:textAlignment="center"
        android:text="@string/quit"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnRestartGame"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/red_button"
        android:textAlignment="center"
        android:text="@string/restart"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <SeekBar
        android:id="@+id/seekVolume"
        android:layout_width="520dp"
        android:layout_height="30dp"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_row="1"
        android:paddingLeft="20dp" 
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"/>

</GridLayout>